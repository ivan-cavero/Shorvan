---
import Layout from '../../layouts/Layout.astro'

export async function getStaticPaths() {
  const posts = await Astro.glob('@pages/blog/post/*.md')

  return posts.map(post => ({
    params: {
      slug: post.frontmatter.slug
    },
    props: {
      post
    },
  }))
}

const { Content } = Astro.props.post

---

<Layout title="Shorvan | Redirect to original URL" description="Redirect to original URL from Shorvan">
  <div class="flex h-screen bg-gray-900 text-white justify-center items-center">
    <Content />
  </div>
  </div>
</Layout>
